@model IEnumerable<QuizApp.Models.TBL_CATEGORY>

@{
    Layout = null;
}


<section class="text-gray-600 body-font">
    <div class="container px-5 py-24 mx-auto">

        <div class="flex flex-col text-center w-full mb-20">
            <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Topic Name</h1>
        </div>
       
        <div class="flex flex-wrap -m-2">
           

            <div class="p-2 lg:w-1/3 md:w-1/2 w-full">
               
                <div class="h-full flex items-center border-gray-200 border p-4 rounded-lg">
                    @foreach (var item in Model)
                    {
                    <div class="flex-grow">
                        <h2 class="text-gray-900 title-font font-medium" id="room">@Html.DisplayFor(modelItem => item.CAT_NAME)</h2>
                        <img alt="team" style="height:60px;width:100px" class="w-16 h-16 bg-gray-100 object-cover object-center flex-shrink-0 rounded-full mr-4" src="~/Content/img/b13.jfif" />
                        <li>@Html.ActionLink("Start Quiz", "QuizStart", "Home")</li>

                    </div>
            
                }
                </div>
                
                </div>
            
            </div>
   
    </div>
</section>

