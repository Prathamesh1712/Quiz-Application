@model QuizApp.Models.TBL_CATEGORY

@{
    ViewBag.Title = "EditCat";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<style>
    body {
        background-image: url('../../content/img/b19.jfif');
        background-size: cover;
    }
</style>
<h1 style="text-align: center; background-color: purple; color: white">Update Subject</h1>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CAT_ID)

        <div class="form-group">
            <b>     @Html.LabelFor(model => model.CAT_NAME, htmlAttributes: new { @class = "control-label col-md-2" })</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CAT_NAME, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CAT_NAME, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" style="background-color: purple; color: white" class="btn btn-warning btn-dark" />
            </div>
        </div>
    </div>
}


