@model QuizApp.Models.TBL_STUDENT

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-image: url('../../content/img/r3.jfif');
            background-size: cover;
        }
    </style>
    <title>Studentregister</title>
</head>
<body>
    @if (ViewBag.msg != null)
    { 
      <div class="alert alert-danger">
          <strong>Error!</strong>@ViewBag.msg

      </div>
    }

    <h2 style="text-align:center;color:white ">Student Registration</h2>
    <div class="container-fluid" >
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-8">
                <div class="container" style="width:60%">

                    @using (@Html.BeginForm("sregister", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        <div class="form-group">
                            <label for="exampleInputEmail" class="form-label mt-4" style="color:white">Student Id</label>
                            @Html.TextBoxFor(x => x.S_EMAIL, new { @class = "form-control",@readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.S_EMAIL, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1" class="form-label mt-4" style="color:white">Email Id</label>
                            @Html.TextBoxFor(x => x.S_NAME, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.S_NAME, "", new { @class = "text-danger" })
                        </div>



                        <div class="form-group">
                            <label for="exampleInputPassword1" class="form-label mt-4" style="color:white">Password</label>
                            @Html.PasswordFor(x => x.S_PASSWORD, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.S_PASSWORD, "", new { @class = "text-danger" })
                        </div>

                        <br />
                        <br />
                        <input type="submit" class="btn btn-warning btn-dark" value="Register" />

                        <input type="button" class="btn btn-warning btn-dark" value="Cancel" onclick="location.href='@Url.Action("SLOGIN", "Home")'" />

                    }
                </div>
            </div>




            <div class="col-lg-4 col-md-4 col-sm-4">

            </div>

        </div>


    </div>
</body>
</html>
