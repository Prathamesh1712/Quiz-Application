@model QuizApp.Models.TBL_ADMIN

@{
    ViewBag.Title = "TLOGIN";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<style>
    body {
        background-image: url('../../content/img/L3.jfif');
        background-size: cover;
    }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="color:white" >
        <h2>Admin  Login</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @* @Html.LabelFor(model => model.AD_NAME, htmlAttributes: new { @class = "control-label col-md-2" })
        *@
        <label for="examplepass" class="form-label mt-4">Admin Name</label>

        <div class="col-md-10">
            @Html.EditorFor(model => model.AD_NAME, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AD_NAME, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            @*       @Html.LabelFor(model => model.AD_PASSWORD, htmlAttributes: new { @class = "control-label col-md-2" })
            *@
            <label for="examplepass" class="form-label mt-4">Password</label>

            <div class="col-md-10">
                @Html.PasswordFor(model => model.AD_PASSWORD, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AD_PASSWORD, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-danger btn-dark" />
                <input type="button" class="btn btn-warning btn-dark" value="Cancel" onclick="location.href='@Url.Action("Index", "Home")'" />

            </div>
        </div>
    </div>
}

<p style="color:red">@ViewBag.msg</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
